/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  padding: 0;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 100%;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e8e8e8;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logout-btn {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  border: none;
  border-radius: 8rpx;
}

.class-list {
  width: 100%;
  padding: 0;
  margin: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.class-cards {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 10rpx;
  margin: 0;
  justify-content: flex-start;
  box-sizing: border-box;
}

.class-card {
  position: relative;
  background: #fff;
  padding: 12rpx 20rpx;
  margin: 8rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  width: calc(33.33% - 16rpx); /* 每行3个 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.class-card:last-child {
  border-right: 1px solid #eee;
}

.class-card:nth-child(4n) {
  border-right: 1px solid #eee;
}

.class-card.selected {
  background: #e6f3ff;
  border: 1px solid #1890ff;
}

.checkbox-icon {
  position: absolute;
  top: 50%;
  right: 8rpx;
  transform: translateY(-50%);
  color: #1890ff;
  font-weight: bold;
  font-size: 24rpx;
}

.class-name {
  font-size: 28rpx;
  padding-right: 30rpx;
  text-align: center;
}

.class-status {
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  margin-top: 4rpx;
}

.online {
  background: #e8f5e9;
  color: #4caf50;
}

.offline {
  background: #ffebee;
  color: #f44336;
}

.input-area {
  background: #fff;
  padding: 20rpx 30rpx;
  border-top: 20rpx solid #f5f5f5;
}

.message-input {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.send-btn, .voice-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.send-btn {
  background: #2196f3;
  color: #fff;
}

.send-btn.disabled {
  background: #bdbdbd;
}

.voice-btn {
  background: #4caf50;
  color: #fff;
}

.voice-btn:active {
  background: #388e3c;
}

.message-list {
  background: #fff;
  flex: 1;
  border-top: 20rpx solid #f5f5f5;
}

.message-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.message-item:last-child {
  border-bottom: none;
}

.message-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.message-target {
  color: #2196f3;
}

.message-time {
  color: #999;
}

.message-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  white-space: pre-wrap;
  padding: 10rpx 0;
}

.class-select {
  margin-bottom: 20px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 4px;
}

.picker {
  padding: 8px;
}

.class-desc {
  font-size: 12px;
  color: #666;
}

.broadcast-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20px;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.record-btn {
  width: 160px;
  height: 160px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1890ff;
  border-radius: 50%;
  color: #fff;
  font-size: 18px;
  box-shadow: 0 4px 8px rgba(24, 144, 255, 0.2);
  transition: all 0.3s ease;
}

.record-btn.recording {
  background-color: #ff4d4f;
  transform: scale(1.1);
  box-shadow: 0 6px 12px rgba(255, 77, 79, 0.3);
}

.record-btn:active {
  transform: scale(0.95);
}

.record-btn[disabled] {
  background-color: #bfbfbf;
  box-shadow: none;
}

.message-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.status-bar {
  text-align: center;
  padding: 10px;
  font-size: 14px;
}

.connected {
  color: #52c41a;
}

.disconnected {
  color: #ff4d4f;
}

.online-status {
  font-size: 12px;
  color: #52c41a;
  margin-top: 4px;
}

/* 新增显示方式和定时选项的样式 */
.options-area {
  margin: 15rpx 0;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.display-mode-selector {
  margin-bottom: 20rpx;
}

.option-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
}

.radio {
  font-size: 26rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.schedule-option {
  margin-top: 10rpx;
}

.schedule-checkbox {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.schedule-checkbox text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.schedule-datetime-picker {
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.picker {
  font-size: 26rpx;
  color: #333;
  padding: 10rpx;
}
